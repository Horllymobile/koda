<div class="row">
    <div class="col l3"></div>
    <div class="col l6 s12 m12">
        <h1 class="center">Sign In</h1>

        <%- include('./partials/messages') %>
        <form action="/users/login" method="POST">
            <div class="input-field">
              <input type="email" id="email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>" class="validate" required>
              <label for="email" data-error="wrong" data-success="right">Email</label>
            </div>
            <div class="input-field">
              <input type="password" id="password" name="password" value="<%= typeof password != 'undefined' ? password : '' %>" class="validate" required>
              <label for="password">Password</label>
            </div>
            <div class="center">
                <input type="submit" value="Sign up" class="btn black">
            </div>
          </form>
    </div>
    <div class="col l3"></div>
</div>